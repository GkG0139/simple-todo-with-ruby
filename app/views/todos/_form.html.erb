<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_area :title, class: "w-full rounded-lg" %>
  </div>

  <div>
    <%= form.label :completed, style: "display: block" %>
    <%= form.select :completed,
                    options_for_select(
                      [['Not Complete', 0],
                       ['Complete', 1]],
                      selected: todo.completed,
                    ),
                    {},
                    { class: "w-full rounded-lg" }
    %>
  </div>
  <h1>
  </h1>
  <div class="mt-8">
    <%= form.submit class: "bg-blue-500 text-white cursor-pointer px-4 py-2 rounded-full mt-2" %>
  </div>
<% end %>
